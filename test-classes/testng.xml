<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Takealot Test Suite">
  <test name="Smoke Tests">
    <groups>
      <run>
        <include name="smoke"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.LoginTest"/>
      <class name="test_classes.LogoutTest"/>
    </classes>
  </test>
  
  <test name="Regression Tests">
    <groups>
      <run>
        <include name="regression"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.LoginTest"/>
      <class name="test_classes.LogoutTest"/>
      <class name="test_classes.PromoCodeTest"/>
      <class name="test_classes.AddAddressTest"/>
      <class name="test_classes.PersonalDetailsTest"/>
      <class name="test_classes.BusinessDetails_Test"/>
      <class name="test_classes.NewsLetterSubscriptionTest"/>
      <class name="test_classes.MyListTest"/>
    </classes>
  </test>
  
  <test name="Promo Code Tests">
    <groups>
      <run>
        <include name="promo"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.PromoCodeTest"/>
    </classes>
  </test>
  
  <test name="Address Tests">
    <groups>
      <run>
        <include name="address"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.AddAddressTest"/>
    </classes>
  </test>
  
  <test name="Account Details Tests">
    <groups>
      <run>
        <include name="accountdetails"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.PersonalDetailsTest"/>
      <class name="test_classes.BusinessDetails_Test"/>
    </classes>
  </test>
  
  <test name="Newsletter Subscription Tests">
    <groups>
      <run>
        <include name="newsletter"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.NewsLetterSubscriptionTest"/>
    </classes>
  </test>
  
  <test name="My List Tests">
    <groups>
      <run>
        <include name="mylist"/>
      </run>
    </groups>
    <classes>
      <class name="test_classes.MyListTest"/>
    </classes>
  </test>
</suite>